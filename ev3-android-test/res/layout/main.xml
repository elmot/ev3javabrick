<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:focusable="false"
              android:gravity="bottom|top" android:stretchColumns="true"
              android:longClickable="true" android:rowCount="3" android:columnCount="3">
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/title"/>
    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content">
        <Button
                android:layout_width="80sp"
                android:layout_height="40sp"
                android:text="@string/RunBtn"
                android:id="@+id/runButton" android:layout_gravity="top"
                android:enabled="true" android:focusable="true" android:focusableInTouchMode="true"
                android:background="@android:color/holo_green_dark" android:layout_margin="5sp"
                android:clickable="true"/>
        <Button
                android:layout_width="80sp"
                android:layout_height="40sp"
                android:text="@string/StopBtn"
                android:id="@+id/stopButton"
                android:focusableInTouchMode="true" android:focusable="true"
                android:background="@android:color/holo_red_dark" android:layout_margin="5sp" android:clickable="true"/>
        <Chronometer
                android:layout_width="fill_parent"
                android:layout_height="40sp"
                android:id="@+id/chronometer"
                android:layout_gravity="center"/>
    </LinearLayout>
    <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:overScrollMode="always"
            android:isScrollContainer="true"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:scrollbarStyle="outsideInset"
            android:scrollbars="vertical" android:fillViewport="false">
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/logView"/>
    </ScrollView>
</LinearLayout>

