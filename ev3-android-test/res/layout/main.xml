<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:focusable="false" android:columnCount="3" android:rowCount="3"
        >
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="AndroBrick-EV3"
            android:layout_row="0" android:layout_columnSpan="3"/>
    <Button
            android:layout_width="80sp"
            android:layout_height="40sp"
            android:text="Run"
            android:id="@+id/runButton" android:layout_gravity="top" android:layout_row="1"
            android:enabled="true" android:focusable="true" android:focusableInTouchMode="true"
            android:background="@android:color/holo_green_dark" android:layout_margin="5sp"
            android:clickable="true"/>
    <Chronometer
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:id="@+id/chronometer" android:layout_gravity="center" android:layout_row="1"
            android:layout_column="2" android:layout_margin="5sp"/>
    <Button
            android:layout_width="80sp"
            android:layout_height="40sp"
            android:text="Stop"
            android:id="@+id/stopButton" android:layout_row="1" android:layout_column="1"
            android:focusableInTouchMode="true" android:focusable="true"
            android:background="@android:color/holo_red_dark" android:layout_margin="5sp" android:clickable="true"/>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView" android:layout_row="2" android:layout_column="0" android:layout_columnSpan="3"
            android:layout_gravity="fill|bottom|left|right|top" android:fillViewport="true" android:clickable="true"
            android:background="@android:color/darker_gray" android:longClickable="true">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/logView" android:clickable="true"/>
    </ScrollView>
</GridLayout>

