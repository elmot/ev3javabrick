<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:focusable="false"
              android:gravity="bottom|top" android:stretchColumns="true"
              android:longClickable="true" android:rowCount="3" android:columnCount="3">
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/urlTitle"/>
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <Button
                    android:layout_width="100sp"
                    android:layout_height="60sp"
                    android:text="@string/StopBtn"
                    android:id="@+id/stopButton"
                    android:focusableInTouchMode="true" android:focusable="true"
                    android:layout_margin="5sp"
                    android:clickable="true" android:enabled="true" style="@android:style/Widget.Holo.Light.Button"
                    android:background="@android:color/holo_red_light" android:layout_gravity="bottom"/>
            <Chronometer
                    android:layout_width="fill_parent"
                    android:layout_height="60sp"
                    android:id="@+id/chronometer"
                    android:layout_gravity="center"/>
        </LinearLayout>
        <VideoView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/videoView"/>
    </LinearLayout>
    <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:overScrollMode="always"
            android:isScrollContainer="true"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:scrollbarStyle="outsideInset"
            android:scrollbars="vertical" android:fillViewport="false">
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/logView"/>
    </ScrollView>
</LinearLayout>

